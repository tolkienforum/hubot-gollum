{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "sourceMap": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": [ "es2015" ],
        "module": "commonjs",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.json"
    ],
    "exclude": [
        "./src/specs/*"
    ]
}
